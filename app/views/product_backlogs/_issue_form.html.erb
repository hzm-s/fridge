<div id="js-issue-form">
  <%= form_with model: form, scope: :form, url: product_issues_path(current_product_id), method: :post do |f| %>
    <div class="mb-2">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 3, class: 'form-control' %>
    </div>
    <div class="row">
      <div class="col-lg-5">
        <%= f.select :type, all_issue_types.map { |type| [t(type.to_s, scope: 'domain.issue.types'), type.to_s] }, { prompt: true }, { class: 'form-control' } %>
      </div>
      <div class="col-lg-7">
        <%= f.select :release, [['Pending', nil]] + releases.map { |r| [r.name, r.name] }, {}, { class: 'form-control' } %>
      </div>
    </div>
    <div class="mt-2">
      <%= f.button t('.add'), class: 'btn btn-success', data: with_loader %>
    </div>
  <% end -%>
</div>
