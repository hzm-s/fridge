<div class="dropdown" data-test-estimate-pbi-<%= item.id %>="1">
  <%= content_tag :span, present_story_point(item.size), dd_trigger_options(id: "dd-pbi-point-#{item.id}", class: 'pbl-item__point') %>
  <div class="dropdown-menu dropdown-menu-right p-3 py-2">
    <%= form_with scope: :form, url: pbi_estimation_path(pbi_id: item.id), method: :put do |f| %>
      <div class="form-group">
        <%= f.label t '.size' %>
        <%= f.collection_select :size, all_story_points, :to_s, :to_s, { selected: present_story_point(item.size) }, { class: 'form-control' } %>
      </div>
      <%= f.button t('navs.save'), class: 'btn btn-success', data: with_loader %>
    <% end %>
  </div>
</div>
