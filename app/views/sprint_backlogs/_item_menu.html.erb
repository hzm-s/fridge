<% can_revert = authorize(:revert_issue_from_sprint, current_team_member_roles, item.status) %>
<% can_accept = authorize(item.accept_issue_activity, current_team_member_roles, item.status) %>
<% if can_revert || can_accept %>
  <div class="dropdown">
    <%= link_to '#', dd_trigger_options(id: "sbi-menu-#{item.id}", class: 'context-menu') do %>
      <i class="fas fa-ellipsis-h"></i>
    <% end -%>
    <div class="dropdown-menu dropdown-menu-right">
      <% if can_revert %>
        <%= link_to current_sprint_issue_path(product_id: current_product.id, id: item.id), method: :delete, class: 'dropdown-item', data: { 'test_revert_issue' => 1 } do %>
          <i class="fas fa-reply"></i>
          <%=t 'domain.issue.cancel_sprint_assign' %>
        <% end %>
      <% end %>
      <% if can_accept %>
        <%= link_to issue_acceptance_path(issue_id: item.id), class: 'dropdown-item', data: { "test_accept_issue" => 1 } do %>
          <i class="fas fa-user-check"></i>
          <%=t 'domain.issue.acceptance' %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
