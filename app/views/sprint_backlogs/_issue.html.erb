<div class="sbi-issue__container" test-sbi-<%= issue.id %>="1">
  <div class="sbi-issue__primary">
    <span class="sbi-issue__type">
      <%= pbl_item_type_icon(issue.type) %>
    </span>
    <%= simple_format(issue.description, class: 'sbi-issue__content') %>
    <%= render partial: 'item_menu', locals: { item: item, issue: issue } %>
  </div>
  <% if item.accepted? %>
    <div class="sbl-item__accepted-status">
      <i class="fas fa-check-circle sbl-item__accepted-status-icon"></i>
      <span>
        <%=t 'domain.issue.statuses.accepted' %>
      </span>
    </div>
  <% else %>
    <% if issue.criteria.any? %>
      <ul class="sbi-issue__ac-list">
        <% issue.criteria.each do |c| %>
          <li class="sbi-issue__ac-item">
            <%= c.content %>
          </li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>
