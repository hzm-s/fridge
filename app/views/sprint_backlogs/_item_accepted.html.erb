<span class="<%= sbl_item_grip_css_classes(false) %>">
  <i class="fas fa-grip-vertical"></i>
</span>
<div class="sbl-item__body">
  <div class="sbl-item__issue">
    <%= render partial: 'issue', locals: { issue: item, show_ac: false } %>
  </div>
  <div class="sbl-item__task">
    <div class="sbl-item__accepted-status">
      <i class="fas fa-check-circle sbl-item__accepted-status-icon"></i>
      <span>
        <%=t '.status' %>
      </span>
    </div>
  </div>
</div>
