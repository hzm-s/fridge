<%= content_tag :div, class: 'sbl-item', data: { id: item.pbi_id } do %>
  <span class="<%= sbl_item_grip_css_classes(true) %>">
    <i class="fas fa-grip-vertical"></i>
  </span>
  <div class="sbl-item__body">
    <div class="sbl-item__pbi">
      <%= render partial: 'pbi', locals: { item: item, pbi: item.pbi } %>
    </div>
    <div class="sbl-item__task">
      <%= render partial: 'task_list', locals: { pbi_id: item.pbi_id, tasks: item.tasks } %>
      <%= render partial: 'task_form', locals: { pbi_id: item.pbi_id, form: nil } %>
    </div>
  </div>
<% end %>
